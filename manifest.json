{
  "manifest_version": 3,
  "name": "UTM Randomizer",
  "version": "1.2.0",
  "description": "Replaces tracking parameters in copied links with absurd values to thwart analytics profiling",
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "minimum_chrome_version": "102"
}
