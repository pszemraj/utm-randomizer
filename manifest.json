{
  "manifest_version": 3,
  "name": "UTM Randomizer",
  "version": "1.1.0",
  "description": "Replaces tracking parameters in copied links with absurd values to thwart analytics profiling",
  "permissions": [
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "minimum_chrome_version": "102"
}
