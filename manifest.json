{
  "manifest_version": 3,
  "name": "UTM Randomizer",
  "version": "2.0.0",
  "description": "Replaces UTM parameters with random/funny values when copying links to thwart tracking",
  "permissions": [
    "offscreen",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "randomize-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Randomize UTM parameters in clipboard"
    }
  }
}