{
  "manifest_version": 3,
  "name": "UTM Randomizer",
  "version": "1.0.0",
  "description": "Replaces tracking parameters in copied links with absurd values to thwart analytics profiling",
  "permissions": [
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
