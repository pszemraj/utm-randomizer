{
  "name": "utm-randomizer",
  "version": "1.0.0",
  "description": "Chrome extension that replaces UTM parameters with random/funny values",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "npx ts-node --project tsconfig.test.json tests/terminal-test-suite.ts",
    "test:watch": "npx ts-node tests/terminal-test-suite.ts --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
